let mapleader = ","

" Moving around
nnoremap H ^
vnoremap H ^
nnoremap L $
vnoremap L $

" Moving between splits
nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l

" Search 
nnoremap - /

" IDE actions
"" Editing
inoremap <C-Return> <C-o>:action EditorCompleteStatement<CR>
noremap <C-t> :action Refactorings.QuickListPopupAction<CR>
noremap <C-g> :action Generate<CR>

"" Navigation
nnoremap <C-p> :action GotoFile<CR>
nnoremap <C-n> :action GotoClass<CR>
nnoremap ,u :action FindUsages<CR>

"" Running and stuff
noremap <F5> :action Debug<CR>
noremap <C-F5> :action Run<CR>
noremap <S-F5> :action Build<CR>

"" Tool windows
nnoremap ,t :action ActivateProjectToolWindow<CR>
nnoremap ,h :action HideAllWindows<CR>

"" VCS
nnoremap ,c :action ChangesView.Commit<CR>
nnoremap ,p :action Vcs.Push<CR>
nnoremap ,P :action Git.Pull<CR>
